# VSM Phoenix Environment Configuration

# Database Configuration
DATABASE_URL=ecto://postgres:postgres@localhost/vsm_phoenix_dev
DATABASE_URL_TEST=ecto://postgres:postgres@localhost/vsm_phoenix_test
POOL_SIZE=10

# Phoenix Secret Key Base (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_generate_with_mix_phx_gen_secret
LIVE_VIEW_SIGNING_SALT=your_live_view_salt_here

# SSL Configuration (Production)
SSL_KEY_PATH=/path/to/ssl/privkey.pem
SSL_CERT_PATH=/path/to/ssl/fullchain.pem
HTTPS_PORT=4443

# LLM API Keys for AI Integration
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Tidewave Integration (optional)
TIDEWAVE_API_KEY=your_tidewave_api_key_here

# Azure Service Bus Configuration (optional)
AZURE_SERVICE_BUS_NAMESPACE=your_service_bus_namespace
AZURE_SERVICE_BUS_KEY_NAME=your_key_name
AZURE_SERVICE_BUS_KEY=your_service_bus_key

# Message Queue Configuration
AMQP_URL=amqp://guest:guest@localhost:5672
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Object Storage Configuration
S3_BUCKET=vsm-phoenix-storage
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Service Discovery
CONSUL_URL=http://localhost:8500

# Secrets Management
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token

# ML Model Storage
ML_MODELS_PATH=/opt/vsm_phoenix/ml_models
ML_CHECKPOINTS_PATH=/opt/vsm_phoenix/ml_checkpoints

# Application Settings
MIX_ENV=dev
PORT=4000
HOST=localhost

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
STRUCTURED_LOGGING=true

# Monitoring and Observability
TRACING_ENABLED=true
METRICS_ENABLED=true

# Feature Flags
ENABLE_LLM_VARIETY=true
DISABLE_MCP_SERVERS=false
DISABLE_MAGG=false
CHAOS_ENGINEERING_ENABLED=false
QUANTUM_LOGIC_ENABLED=true
EMERGENT_INTELLIGENCE_ENABLED=true
META_VSM_ENABLED=true
ALGEDONIC_SYSTEM_ENABLED=true
ADVANCED_MONITORING_ENABLED=true
AUTO_SCALING_ENABLED=false

# Development/Debug Settings
ENABLE_DEBUG_LOGS=false
ENABLE_BENCHMARKING=true
ENABLE_PROFILING=false

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourdomain.com

# Analytics and Tracking (optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# CDN Configuration (optional)
CDN_URL=https://cdn.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100